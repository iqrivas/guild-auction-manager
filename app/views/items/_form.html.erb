<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :quality, style: "display: block" %>
    <%= form.select :quality, options_for_select(Item.qualities.keys, item.quality) %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category, Category.all.collect { |c| [ c.name, c.id ] }, include_blank: false %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
